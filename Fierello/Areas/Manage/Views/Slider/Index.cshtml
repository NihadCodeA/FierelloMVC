@model List<Slider>
@{
    int count=0;
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <div>Sliders</div>
        <div style="border-radius:4px" class="bg-success px-3 py-1">
            <a class="text-white" asp-area="manage" asp-controller="slider" asp-action="create">Add a new slider</a>
        </div>
    </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
            <th scope="col">FirstTitle</th>
            <th scope="col">SecondTitle</th>
            <th scope="col">SliderImage</th>
    </tr>
  </thead>
  <tbody>
        @foreach(Slider slider in Model)
        {
            count++;
            <tr>
            <th scope="row">@count</th>
                <td>@slider.FirstTitle</td>
                <td>@slider.SecondTitle</td>
            <td><img src="~/uploads/sliders/@slider.SliderImages.FirstOrDefault()?.ImgUrl"></td>
        </tr>
        }
    </tbody>
</table>
</div>