@model List<Product>
@{
    int count = 0;
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <div>Sliders</div>
        <div style="border-radius:4px" class="bg-success px-3 py-1">
            <a class="text-white" asp-area="manage" asp-controller="product" asp-action="create">Add a new slider</a>
        </div>
    </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
                <th scope="col">CategoryId</th>
                <th scope="col">Category</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Img</th>
    </tr>
  </thead>
  <tbody>
            @foreach (Product product in Model)
            {
                count++;
                <tr>
                <th scope="row">@count</th>
                    <td>@product.CategoryId</td>
                    <td>@product?.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><img src="~/uploads/products/@product?.ImgUrl"></td>
                    <td>
                        <a asp-controller="product" asp-action="update" asp-route-id="@product.Id" class="btn btn-primary text-white" style="cursor:pointer">update</a>
                        <a asp-controller="product" asp-action="delete" asp-route-id="@product.Id" class="btn btn-danger text-white" style="cursor:pointer"> delete</a>
                    </td>
            </tr>
            }
    </tbody>
</table>
</div>